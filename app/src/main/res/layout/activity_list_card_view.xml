<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextFiltro"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="4"
                android:layout_marginTop="6dp"
                android:background="#11000000"
                android:drawableStart="@drawable/ic_action_add_caso"
                android:hint="Filtro"
                android:maxLines="1"
                android:textColorHint="@color/colorBackground"
                android:textSize="14sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextFiltro2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="4"
                android:layout_marginTop="10dp"
                android:background="#11000000"
                android:drawableStart="@drawable/ic_action_add_caso"
                android:hint="Filtro"
                android:maxLines="1"
                android:textColorHint="@color/colorBackground"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/appCompatButtonBusqueda"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:drawableBottom="@drawable/ic_action_search" />



        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>