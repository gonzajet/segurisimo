<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.ListaSiniestrosFragment">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/principal4" />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextFiltro"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:layout_weight="2"
            android:background="#11000000"
            android:drawableStart="@drawable/ic_action_add_caso"
            android:hint="@string/filtro_por_patente"
            android:maxLines="1"
            android:textColorHint="@color/colorBackground"
            android:textSize="14sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextFiltro2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="#11000000"
            android:drawableStart="@drawable/ic_action_add_caso"
            android:hint="@string/filtro_por_estado"
            android:maxLines="1"
            android:textColorHint="@color/colorBackground"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonBusqueda"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableBottom="@drawable/ic_action_search" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/textInputLayoutBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/colorBackground"
            >

            <!-- TODO: Update blank fragment layout -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.design.widget.CoordinatorLayout>
